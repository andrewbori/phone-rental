<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @RenderSection("styles", required: false)
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Telefonkölcsönző", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                           <!-- <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li> -->

                            @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Customer")) {
                                <li>@Html.ActionLink("Készülékek", "Index", "PreBorrow")</li>
                            }
                            @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin")) {
                                <li>@Html.ActionLink("Készülék típusok", "Index", "DeviceType")</li>
                                <li>@Html.ActionLink("Készülékek", "Index", "Device")</li>
                                <li>@Html.ActionLink("Készülék kiadása", "Index", "Borrow")</li>
                                <li>@Html.ActionLink("Felhasználók", "Index", "Role")</li>
                                <li>@Html.ActionLink("Statisztikák", "Index", "Statistics")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <div id="image_canvas" onclick="hideImage();">
                <img onclick="hideImage();" />
            </div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - AAIT</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script type="text/javascript">
            function showImage(name) {
                $("#image_canvas img").attr("src", "/Images/Devices/" + name);
                $("#image_canvas").show(200);
            }

            function showImage(name) {
                $("#image_canvas img").attr("src", "/Images/Devices/" + name);
                $("#image_canvas").show(200);
            }

            function showAvatar(name) {
                $("#image_canvas img").attr("src", "http://www.gravatar.com/avatar/" + name + "?s=600&d=mm");
                $("#image_canvas").show(200);
            }

            function hideImage() {
                $("#image_canvas").hide(100);
                $("#image_canvas img").attr("src", "");
            }
        </script>
    </body>
</html>
