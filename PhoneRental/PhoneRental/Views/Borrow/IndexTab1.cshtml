@model PhoneRental.Models.BorrowForPreBorrow

   <div id ="tabs-1">
        @using (Html.BeginForm("NewForPreBorrow", "Borrow", FormMethod.Post, new { Id = "form1" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Borrow</legend>

                <div class="editor-label">
                    Előfoglalás
                </div>

                <div class="editor-field">
                    @Html.DropDownList("PreBorrowId", (SelectList)ViewBag.PreBorrows, string.Empty, new { id = "PreBorrowId1" })
                    @Html.ValidationMessageFor(model => model.PreBorrowId)
                </div>
                
                <div class="editor-label">
                    Készülék
                </div>

                <div class="editor-field">
                    @Html.DropDownList("DeviceId", (SelectList)ViewBag.Devices, string.Empty, new { id="DeviceList1"})
                    @Html.ValidationMessageFor(model => model.DeviceId) 
                </div>

                <div class="editor-label">
                    Kiadás időpontja
                </div>

                <div class="editor-field">
                    @Html.TextBoxFor(model => model.StartDate, new { Id = "StartDate1", Class = "calendar", Name = "StartDate" })
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>

                <div class="editor-label">
                    Határidő
                </div>

                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Deadline, new { Id = "Deadline1", Class = "calendar", Name = "Deadline" })
                    @Html.ValidationMessageFor(model => model.Deadline)
                </div>

                <div class="editor-label">
                    @Html.CheckBoxFor(model => model.IsChargerOut, new { id = "IsChargerOut1" })
                    @Html.ValidationMessageFor(model => model.IsChargerOut)
                    Töltő kiadva
                </div>

                <div class="editor-label">
                    @Html.CheckBoxFor(model => model.IsBoxOut, new { id = "IsBoxOut1" })
                    @Html.ValidationMessageFor(model => model.IsBoxOut)
                    Doboz kiadva
                </div>

                <div class="editor-label">
                    Megjegyzés
                </div>

                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Note, new { cols="10", rows="3" })
                    @Html.ValidationMessageFor(model => model.Note)
                </div>

                <p>
                    <input type="submit" value="Kiadás" id="button1" />
                </p>
            </fieldset>
        }
    </div>
    <div hidden="hidden">
        <a href="#" id="send1"></a>
    </div>