@model PhoneRental.Models.LocalPasswordModel
@{
    ViewBag.Title = "Felhasználói profil";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

<p>A következő felhasználóként vagy bejelentkezve: <strong>@User.Identity.Name</strong>.</p>

<p>
    <a href="javascript:showAvatar('@ViewBag.AvatarHash')">
        <img id="imgGravatar" style="height:80px;width:80px;" alt="" src="http://www.gravatar.com/avatar/@ViewBag.AvatarHash?s=80&d=mm">
    </a>
</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
